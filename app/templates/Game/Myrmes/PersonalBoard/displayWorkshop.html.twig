{#
This section displays the workshop on the personal board to access at the workshop phase
@param :
@return :
#}
<div class="inlineFlexCol items-center {{ gapSize }}" id="workshop">
    <p class="relative w-fit mb-px {% if isPreview %}text_mini {% else %} text2-4 {% endif %}">Atelier</p>
    {#workshop icon#}
    <{% if not isPreview %}button{% else %}div{% endif %} type="button"
            {{ stimulus_action('myrmes','placeNurseOnWorkshop','click') }}
    >
        <img class="{% if isPreview %}w-[3vw]{% else %}w-full{% endif %}" id="workshopIcon"
             src="{{ asset('resourcesGames/Myrmes/personalBoard/workshop.svg') }}"
             alt="workshop icon"/>
    </{% if not isPreview %}button{% else %}div{% endif %}>
</div>