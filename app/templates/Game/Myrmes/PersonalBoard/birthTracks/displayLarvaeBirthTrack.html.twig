{#
This section displays the birth track for larvae.
@param :
@return :
#}
<div class="relative w-1/6 h-full justify-start align-top inline-flex flex-col gap-3" id="larvae">
    <div class="inlineFlex items-center gap-2 w-full h-[3rem] lg:h-[4rem]" id="larvaeCount">
        <p class="relative w-10 h-fit text3-4" id="larvaeCountText">X</p>
        <img class="h-full" src="{{ asset('resourcesGames/Myrmes/resources/larva.svg') }}"
             alt="larvae icon"/>
    </div>
    <div class="inlineFlexCol gap-2 lg:gap-5">
        <div class="inlineFlexCol items-center gap-1 lg:gap-2.5 relative" id="larvaeTrack">
            {% for i in 1..2 %}
                <img class="w-[90%]"
                     src="{{ asset('resourcesGames/Myrmes/personalBoard/birthTrack/birthTrackOneBis.svg') }}"
                     alt="larvae birth track">
            {% endfor %}
            <img class="w-[90%]"
                 src="{{ asset('resourcesGames/Myrmes/personalBoard/birthTrack/birthTrackTwo.svg') }}"
                 alt="larvae birth track"/>
        </div>
        <div class="flex justify-center">
            <button type="button" class="w-[60%]"
                    {{ stimulus_action('myrmes','placeNurseOnLarvaeTrack','click') }}
            >
                <img class="relative" id="larvaeButton"
                     src="{{ asset('resourcesGames/Myrmes/myrmesArrow.svg') }}"
                     alt="place larvae"/>
            </button>
        </div>
    </div>
</div>