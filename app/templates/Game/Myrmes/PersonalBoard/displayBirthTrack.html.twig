{#
This section displays the birthing rooms where the player can place nurses to create larvas, workers and/or warriors
@param :
@return :
#}
<div class="relative w-full h-[75%] inlineFlexCol gap-2 lg:gap-5" id="birth_track">
    <p class="text2-4">Pistes de naissances</p>
    <div class="inline-flex items-start w-full align-center justify-evenly">
        <div class="relative w-1/6 h-full justify-start align-top inline-flex flex-col gap-3" id="larvae">
            <div class="inlineFlex items-center gap-2 w-full h-[3rem] lg:h-[4rem]" id="larvaeCount">
                <p class="relative w-10 h-fit text3-4" id="larvaeCountText">X</p>
                <img class="h-full" src="{{ asset('resourcesGames/Myrmes/resources/larva.svg') }}"
                     alt="larvae icon"/>
            </div>
            <div class="inlineFlexCol gap-2 lg:gap-5">
                <div class="inlineFlexCol items-center gap-1 lg:gap-2.5 relative" id="larvaeTrack">
                    {% for i in 1..2 %}
                        <img class="w-[90%]"
                             src="{{ asset('resourcesGames/Myrmes/personalBoard/birthTrack/birthTrackOneBis.svg') }}"
                             alt="larvae birth track">
                    {% endfor %}
                    <img class="w-[90%]"
                         src="{{ asset('resourcesGames/Myrmes/personalBoard/birthTrack/birthTrackTwo.svg') }}"
                         alt="larvae birth track"/>
                </div>
                <div class="flex justify-center">
                    <button type="button" class="w-[60%]"
                            {{ stimulus_action('myrmes','placeNurseOnLarvaeTrack','click') }}
                    >
                        <img class="relative" id="larvaeButton"
                             src="{{ asset('resourcesGames/Myrmes/myrmesArrow.svg') }}"
                             alt="place larvae"/>
                    </button>
                </div>

            </div>
        </div>
        <div class="relative w-1/6 h-full justify-start align-top inline-flex flex-col gap-3" id="soldier">
            <div class="inlineFlex gap-3 items-center w-full h-[3rem] lg:h-[4rem]" id="soldierCount">
                <p class="relative w-10 h-fit text3-4">X</p>
                <img class="h-full" id="soldierIcon"
                     src="{{ asset('resourcesGames/Myrmes/soldierIcon.svg') }}"
                     alt="soldier icon"/>
            </div>
            <div class="inlineFlexCol gap-2 lg:gap-5">
                <div class="inlineFlexCol items-center gap-1 lg:gap-2.5 relative"
                     id="soldierTrack">
                    <img class="w-[90%]"
                         src="{{ asset('resourcesGames/Myrmes/personalBoard/birthTrack/birthTrackOne.svg') }}"
                         alt="soldier birth track"/>
                    <img class="w-[90%]"
                         src="{{ asset('resourcesGames/Myrmes/personalBoard/birthTrack/birthTrackTwo.svg') }}"
                         alt="soldier birth track"/>
                </div>
                <div class="flex justify-center">
                    <button type="button" class="w-[60%]"
                            {{ stimulus_action('myrmes','placeNurseOnSoldiersTrack','click') }}
                    >
                        <img class="relative" id="soldierButton"
                             src="{{ asset('resourcesGames/Myrmes/myrmesArrow.svg') }}"
                             alt="place soldier"/>
                    </button>
                </div>

            </div>
        </div>
        <div class="relative w-1/6 h-full justify-start align-top inline-flex flex-col gap-3" id="worker">
            <div class="inlineFlex items-center gap-2 w-full h-[3rem] lg:h-[4rem]" id="workerCount">
                <p class="relative w-10 h-fit text3-4">X</p>
                <img class="h-full" id="workerIcon"
                     src="{{ asset('resourcesGames/Myrmes/workerIcon.svg') }}"
                     alt="worker icon"/>
            </div>
            <div class="inlineFlexCol gap-2 lg:gap-5">
                <div class="inlineFlexCol items-center gap-1 lg:gap-2.5 relative"
                     id="workersTrack">
                    {% for i in 1..2 %}
                        <img class="w-[90%]"
                             src="{{ asset('resourcesGames/Myrmes/personalBoard/birthTrack/birthTrackTwo.svg') }}"
                             alt="worker birth track"/>
                    {% endfor %}
                </div>
                <div class="flex justify-center">
                    <button type="button" class="w-[60%]"
                            {{ stimulus_action('myrmes','placeNurseOnWorkersTrack','click') }}
                    >
                        <img class="relative" id="workerButton"
                             src="{{ asset('resourcesGames/Myrmes/myrmesArrow.svg') }}"
                             alt="place worker"/>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>