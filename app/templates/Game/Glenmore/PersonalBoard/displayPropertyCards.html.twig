{#
This section displays the player property cards
@param : player
@return : display player's property cards
#}
{% set propertyCards = player.personalBoard.playerCardGLM %}
<div id="propertyCardsDisplay"
     class="absolute top-0 left-0 w-full h-full bg-black bg-opacity-70 flex z-50 text-white items-center justify-center">
    <div class="bg-green-950 w-[55%] h-[75%] p-10 rounded-lg flex flex-col justify-center items-center">
        <h2 class="justify-center text-2xl">Cartes de propriété</h2>

        <div class="max-h-full max-w-full grid grid-rows-3 grid-cols-5">
            {% for propertyCard in propertyCards %}
                <img class="h-40 w-60"
                     src="{{ asset('resourcesGames/Glenmore/PropertyCards/' ~ propertyCard.card.id ~ '.svg') }}"
                     alt="{{ propertyCard.card.name }}" />
            {% endfor %}
        </div>
        <button id="return_board" onclick="closePropertyCardsDisplayWindow()"
                class="rounded-lg bg-[#8F901F] py-2 px-3 m-1 portrait:text-2xl items-center"
        >
            <img src="{{ asset('resourcesGames/utils/return-arrow.svg') }}" id="returnArrow"
                 alt="return on board"
                 class="h-6 max-h-full">
        </button>
    </div>

</div>