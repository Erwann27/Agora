{% extends "AGORAPlatformBundle::layout.html.twig" %}

{% block style %}
    <link rel="stylesheet" href="{{ asset('bundles/agoraplatform/css/game.css') }}" type="text/css" />
{% endblock %}


{% block title %}{{ parent() }} - Liste des jeux{% endblock %}

{% block header %}

    <h1>Nos jeux</h1>

{% endblock %}
{% block content %}

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col" id="colJeu">Jeu</th>
                <th scope="col" id="colJoueurs">Nombre de joueurs</th>
                <th scope="col">Description</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for game in gameList %}

            <tr>
                <td class="align-middle">
                    <img class="logoGame" src="{{ asset('bundles/agoraplatform/image/availableGame/' ~ game.image) }}" alt="Boite du jeu {{ game.gameName }}">
                </td>

                <th class="align-middle">
                    <h5>{{ game.gameName }}</h5>
                </th>

                <td class="align-middle">{{ game.minPlayers }} - {{ game.maxPlayers }}</td>
                <td class="align-middle">{{ game.description }}</td>
                <td class="align-middle"><a class="btn btn-danger btn-md btn-block" href="{{game.rules}}" target="_blank">RÃ¨gles</a></td>
            </tr>

            {% endfor %}
        </tbody>
    </table>

{% endblock %}
