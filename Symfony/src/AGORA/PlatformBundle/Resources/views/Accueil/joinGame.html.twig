{% extends "AGORAPlatformBundle::layout.html.twig" %}

{% block style %}
    <link rel="stylesheet" href="{{ asset('bundles/agoraplatform/css/main.css') }}" type="text/css" />
{% endblock %}


{% block title %}{{ parent() }} - Rejoindre une partie{% endblock %}

{% block header %}
    <h1>Rejoindre une partie</h1>
{% endblock %}

{% block content %}
	<script src="{{ asset('bundles/agoragamesqp/script/vendor/modernizr-3.5.0.min.js') }}"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <table id="joinGameTableAVC" class="display">
        <thead>
        <tr>
			<th>Nom du jeu</th>
			<th>Nom du lobby</th>
            <th>Personnes présentes en jeu</th>
            <th>Nombre de joueurs requis</th>
            <th>Date de création</th>
            <th>Lien</th>
        </tr>
        </thead>

	{# Affichage des parties #}
	
	{# Affichage des parties #}
	{% for game in games %}
		{% set alreadyInGame = false %}
		{% set gameCodeSet = game.gameInfoId.getGameCode() %}
		{% if game.state == "waiting" %}
		<tr>
			<td>
				{{ game.gameInfoId.getGameName() }}
			</td>
			<td>
				{{ game.gameName }}
			</td>
			<td>
				{% for gameCode,pls in players %}
					{% if gameCode == gameCodeSet %}
						{% for key, pls2 in pls %}
							{% if key == game.id %}
								{% for pl in pls2 %}
									{% if pl.userId.id  == app.user.id %}
										{% set alreadyInGame = true %}
									{% endif %}
									{% if game.hostId == pl.userId %}
										[<u>{{ pl.userId.username }}</u>]
									{% else %}
										[{{ pl.userId.username }}]
									{% endif %}
								{% endfor %}
							{% endif %}
						{% endfor %}
					{% endif %}
				{% endfor %}
			</td>
			<td>
				{{ game.playersNb }}
			</td>
			<td>
				{{ game.creationDate|date('Y-m-d') }}
			</td>
			<td>
				{% if alreadyInGame == true %}
					<a class="btn btn-warning btn-xs go" href="{{ path('agora_game_homepage_' ~ gameCodeSet, {'gameId': game.gameId }) }}">Aller à la table</a>
					{% if players[gameCodeSet][game.id]|length < game.playersNb %}
						<a class="btn btn-danger btn-xs quit" href="{{ path('agora_game_quit_' ~ gameCodeSet, {'gameId': game.gameId }) }}">Quitter la partie</a>
					{% endif %}
				{% else %}
					<a class="btn btn-success btn-xs" href="{{ path('agora_game_join_' ~ gameCodeSet, {'gameId': game.gameId }) }}">Rejoindre la partie</a>
				{% endif %}
			</td>
		</tr>
		{% endif %}
	{% endfor %}
	</table>
	
	<script>
        $('#joinGameTableSQP').addClass("display");
        $(document).ready( function () {
            $('table.display').DataTable(
                {"paging": false,

                    //"scrollCollapse": true,
                    "language" : {
                        "sProcessing":     "Traitement en cours...",
                        "sSearch":         "Rechercher&nbsp;:",
                        "sLengthMenu":     "Afficher _MENU_ &eacute;l&eacute;ments",
                        "sInfo":           "Total des parties : _TOTAL_",
                        "sInfoEmpty":      "",
                        "sInfoFiltered":   "(filtr&eacute; de _MAX_ &eacute;l&eacute;ments au total)",
                        "sInfoPostFix":    "",
                        "sLoadingRecords": "Chargement en cours...",
                        "sZeroRecords":    "Aucun &eacute;l&eacute;ment &agrave; afficher",
                        "sEmptyTable":     "Aucune partie en cours",
                        "oPaginate": {
                            "sFirst":      "Premier",
                            "sPrevious":   "Pr&eacute;c&eacute;dent",
                            "sNext":       "Suivant",
                            "sLast":       "Dernier"
                        },
                        "oAria": {
                            "sSortAscending":  ": activer pour trier la colonne par ordre croissant",
                            "sSortDescending": ": activer pour trier la colonne par ordre d&eacute;croissant"
                        }},
                    //"scrollY": "50vh"//cause un bug avec datatable, seule la première table est transformée});
            });});
	</script>
{% endblock %}

{% block footer %}
{% endblock %}
