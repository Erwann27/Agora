{% extends 'platform/base.html.twig' %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}
	<div>
		<form>
			<h2 class="text-base font-semibold leading-7 text-gray-900">Nouvelle Table - GameName</h2>
			<p class="mt-1 text-sm leading-6 text-gray-600">GameDesc ?</p>

			<div class="mt-10 grid grid-cols-2 gap-5">
				<div>
					<label for="playerNb" class="block text-sm font-medium leading-6 text-gray-900">Nombre de joueur</label>
					<select id="playerNb" name="playerNb" class="mt-2 w-1/6 shadow appearance-none border rounded text-gray-900 leading-tight focus:outline-none focus:shadow-outline">
						<option>3</option>
						<option>4</option>
						<option>5</option>
						<option>. . .</option>
					</select>
				</div>

					<div>
						<label for="reserved" class="block text-sm font-medium leading-6 text-gray-900">Nombre de place réservé</label>
						<p class="text-gray-600 text-sm">Un lien sera généré à la création de la table</p>
						<select id="reserved" name="reserved"
								class="mt-2 w-1/6 shadow appearance-none border rounded text-gray-900 leading-tight focus:outline-none focus:shadow-outline">
							<option>Aucune</option>
							<option>1</option>
							<option>2</option>
							<option>3</option>
							<option>. . .</option>
						</select>
					</div>

				<div class="mt-2 flex items-center">
					<div class="text-sm leading-6">
						<label for="candidates" class="font-medium text-gray-900">définir le temps de jeu ?</label>
						<p class="text-gray-600">Permet de définir le temps de jeu maximum avant l'expulsion d'un joueur.</p>
					</div>
					<input id="candidates" name="candidates" type="checkbox" class="mt-2 mx-auto rounded border-gray-300 text-primary focus:ring-primary">
				</div>

				<div>
					<label for="inactivity" class="block text-sm font-medium leading-6 text-gray-900">Temps d'inactivité</label>
					<div class="mt-2 flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-primary sm:max-w-xs">
						<input type="number" name="inactivity" id="inactivity"
							   class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 focus:ring-0" value="0" min="0">
						<div class="inset-y-0 right-0 flex items-center">
							<select name="inactivityUnit" class="h-full rounded-md border-0 bg-transparent py-0 pl-2 pr-7 text-gray-600 focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm">
								<option>Heure</option>
								<option>Jour</option>
								<option>Semaine</option>
								<option>Mois</option>
							</select>
						</div>
					</div>
				</div>

				<button type="submit" class="mx-auto bg-primary hover:bg-blue-400 text-white py-2 px-4 rounded focus:outline-none focus:shadow-outline">Creer une table</button>

				</div>
		</form>
	</div>
{% endblock %}
