{% extends 'base.html.twig' %}

{% block title %}Liste des parties du Splendor{% endblock %}

{% block body %}
    <h1>Splendor</h1>
    <a href="{{ path('app_game_splendor_create') }}">Nouvelle partie</a>
    {% for game in games  %}
        <div>
            <h2>Partie {{ game.id }}</h2>
            <div>
                {% for player in game.players %}
                    <p>{{ player.username }}</p>
                {% endfor %}
            </div>
            {% if game.launched %}
                <a href="{{ path('app_game_show_spl', {'id': game.id}) }}">Rejoindre la partie</a>
            {% else %}
                <a href="{{ path('app_game_splendor_join', {'id': game.id}) }}">S'inscrire</a>
                <a href="{{ path('app_game_splendor_launch', {'id': game.id}) }}">Lancer</a>
            {% endif %}
            <a href="{{ path('app_game_splendor_delete', {'id': game.id}) }}">Supprimer</a>
        </div>
    {% endfor %}
{% endblock %}
