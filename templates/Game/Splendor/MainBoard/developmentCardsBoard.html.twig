{#
    This section displays the development cards that can be reserved or bought by players
    @param :
    @return :
#}
<div class="flow float-start w-[75%] h-5/6 bg-yellow-600">
    <div class="grid grid-rows-3 grid-cols-5 h-full w-full">
        {% for row in rows.values %}
                {% for card in rows %}
                    {% if row.id == 1 %}
                        <div id="card_{{ card.id }}">
                                <img class="flow float-left rounded-lg shadow-black shadow-lg"
                                     src="{{ asset('resourcesGames/Splendor/Images/DevelopmentCards/' ~ card.id ~ '.png') }}"
                                     alt="cardLevel3"
                                >
                        </div>
                    {% endif %}
                {% endfor %}
        {% endfor %}
    </div>
</div>

