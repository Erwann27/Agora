{#
This section displays the warehouse of the main board, with available resources
@param : none
@return : display difference points table for calculating points at the end of the game
#}

{% set  pointsDifferences = [1, 2, 3, 4, 5] %}
{% set assignedPoints = [1, 2, 3, 5, 8] %}

<div class="w-full h-full grid grid-cols-2 grid-rows-{{ pointsDifferences|length + 1 }}">
    <span class="bg-green-400 bg-opacity-25 rounded-lg flex items-center justify-center">Diff√©rences</span>
    <span class="bg-green-400 bg-opacity-25 rounded-lg flex items-center justify-center">Points</span>
    {% for i in 0..pointsDifferences|length - 1%}
        {% if pointsDifferences[i] == 5 %}
            <span class="flex items-center justify-center">+{{ pointsDifferences[i] }}</span>
        {% else %}
            <span class=" flex items-center justify-center">{{ pointsDifferences[i] }}</span>
        {% endif %}

        <span class="flex items-center justify-center">{{ assignedPoints[i] }}</span>
    {% endfor %}
</div>