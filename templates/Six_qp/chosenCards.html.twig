{% block chosenCards %}
        <div class="bg-gray-500 rounded flow float-left w-1/5 h-3/4 overflow-hidden shadow-black shadow-lg">
            <div class="grid grid-cols-2 grid-rows-5 w-full h-full p-3">
                {% set ind = 0 %}
                {% for card in chosenCards %}
                    <div class=" hover:z-10 hover:overflow-visible z-0 p-2">
                        {% set hovering = "" %}
                        {% if ind != 0 and ind != 1 %}
                            {% set hovering = "transform hover:-translate-y-10" %}
                        {% else %}
                            {% set hovering = "" %}
                        {% endif %}
                        {% if chosenCards|length == playersNumber %}
                            <img class="{{'rounded shadow-lg shadow-black aspect-auto hover:md:p-0' ~ hovering}}"
                                 src="{{ asset('resourcesGames/6QP/cardsImages/' ~ card) }}"
                                 alt="card">
                        {% else %}
                            <img class="{{'rounded shadow-lg shadow-black aspect-auto hover:md:p-0' ~ hovering}}"
                                 src="{{ asset('resourcesGames/6QP/cardsImages' ~ "/back.png") }}"
                                 alt="back">
                        {% endif %}
                    </div>
                    {% set ind = ind + 1 %}
                {% endfor %}
            </div>
        </div>
{% endblock %}